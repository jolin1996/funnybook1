.card-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.card-dialog {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  left: 10%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
}

.target-text {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.card-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1rpx solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.target-image {
  margin-top: 35rpx;
  height: 640rpx;
  width: 480rpx;
  border-color: black;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 30rpx;
}

.target-text {
  display: block;
}
