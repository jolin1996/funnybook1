.align-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
}

.vol-picture {
  /* width: 100%; */
  width: 200rpx;
  height: 280rpx;
  display: inline-block;
  overflow: hidden;
}

.vol-title {
  padding: 10rpx 5rpx;
  font-size: 40rpx;
  color: rgb(43, 40, 40);
  text-align: center;
}

.vol-author {
  padding: 0;
  font-size: 24rpx;
  color: #888;
  text-align: center;
}

.vol-reader {
  position: absolute;
  text-align: center;
  bottom: 80rpx;
}

.vol-reader-image {
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  overflow: hidden;
  border-radius: 50%;
}

.vol-reader-name {
  font-size: 24rpx;
  color: #888;
}
