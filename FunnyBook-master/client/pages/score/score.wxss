@import '../../dist/styles/weui.wxss';
@import '../../dist/styles/skyvow.wxss';

.mine .avtar {
  width: 100%;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mine .avtar >image {
  width: 80px;
  height: 80px;
	border-radius: 50%;
}

.mine .data-types{
	display: flex;
}

.mine .data-types .type-item{
	flex: 1;
	line-height: 2rem;
	text-align: center;
  color: #fff;
}

.mine .data-types .type-item .title{
	font-size: 12px;
	color: #fff;
}

.mine .data-types .type-item .count{
  line-height: 1rem;
	font-size: 18px;
	color: #fff;
}

.card{
  margin-top: 10px;
}

.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}

.move-container {
  width: 100%;

}

#mychart-dom-move-bar {
  width: 100%;
  height: 150px;
  display: block;
}

.move-container .text {
  margin-bottom: 20px;
}

.move-container text {
  margin: 10px;
  display: block;
}

.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 213rpx;
    height: 213rpx;
    margin:0 5rpx 20rpx 5rpx;
    border-radius: 20px;
    text-align: center;
    background: #f5f6f5;
}
.newest-box .newest-list:nth-child(3n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 175rpx;
    height: 175rpx;
    margin: 5rpx 0 5rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}